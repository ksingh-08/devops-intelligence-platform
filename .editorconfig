# DevOps Intelligence Platform - Editor Configuration
# Ensures consistent coding styles across different editors and IDEs

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript, TypeScript, JSX, TSX
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_size = 2
max_line_length = 120

# YAML files
[*.{yml,yaml}]
indent_size = 2
max_line_length = 120

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# Shell scripts
[*.sh]
indent_size = 2

# Docker files
[Dockerfile*]
indent_size = 2

# Configuration files
[*.{toml,ini}]
indent_size = 2

# Package files
[package.json]
indent_size = 2
