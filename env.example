# DevOps Intelligence Platform - Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# KESTRA CONFIGURATION
# =============================================================================
KESTRA_API_KEY=your_kestra_api_key_here
KESTRA_WORKSPACE_ID=your_kestra_workspace_id
KESTRA_BASE_URL=https://api.kestra.io

# =============================================================================
# DATA SOURCES - MONITORING & OBSERVABILITY
# =============================================================================

# Datadog Configuration
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key
DATADOG_SITE=datadoghq.com

# New Relic Configuration  
NEW_RELIC_API_KEY=your_newrelic_api_key
NEW_RELIC_ACCOUNT_ID=your_account_id

# GitHub Configuration
GITHUB_TOKEN=ghp_your_github_personal_access_token
GITHUB_OWNER=your_github_username
GITHUB_REPO=devops-intelligence-platform

# Sentry Configuration
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=devops-intelligence

# AWS CloudWatch Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_LOG_GROUP_NAME=/aws/lambda/your-function

# =============================================================================
# AI & CODE GENERATION
# =============================================================================

# Cline CLI Configuration
CLINE_API_KEY=your_cline_api_key
CLINE_MODEL=claude-3-sonnet-20240229
CLINE_MAX_TOKENS=4096

# OpenAI Configuration (for Cline LLM)
OPENAI_API_KEY=sk-your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview

# Together AI Configuration (optional LLM provider)
TOGETHER_API_KEY=your_together_ai_key
TOGETHER_MODEL=meta-llama/Llama-2-70b-chat-hf

# =============================================================================
# CODE REVIEW & QUALITY
# =============================================================================

# CodeRabbit Configuration
CODERABBIT_API_KEY=your_coderabbit_api_key
CODERABBIT_WEBHOOK_SECRET=your_webhook_secret

# =============================================================================
# DEPLOYMENT & HOSTING
# =============================================================================

# Vercel Configuration
VERCEL_TOKEN=your_vercel_token
VERCEL_PROJECT_ID=your_vercel_project_id
VERCEL_ORG_ID=your_vercel_org_id
VERCEL_TEAM_ID=your_vercel_team_id

# =============================================================================
# NOTIFICATIONS & ALERTS
# =============================================================================

# Slack Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
SLACK_CHANNEL=#devops-alerts
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Email Configuration (SendGrid)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=alerts@yourcompany.com
SENDGRID_TO_EMAIL=devops-team@yourcompany.com

# =============================================================================
# DATABASE & STORAGE
# =============================================================================

# Database Configuration (if using external DB)
DATABASE_URL=postgresql://user:password@localhost:5432/devops_intelligence
REDIS_URL=redis://localhost:6379

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_key

# Application Settings
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Security
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Application Performance Monitoring
APM_SERVICE_NAME=devops-intelligence-platform
APM_ENVIRONMENT=development

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Toggles
ENABLE_AUTO_DEPLOYMENT=true
ENABLE_SLACK_NOTIFICATIONS=true
ENABLE_EMAIL_ALERTS=false
ENABLE_LEARNING_MODE=true
ENABLE_DEBUG_LOGGING=false

# Decision Engine Configuration
CONFIDENCE_THRESHOLD=0.8
MAX_AUTO_DEPLOYMENTS_PER_HOUR=5
ESCALATION_TIMEOUT_MINUTES=30

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Test Configuration
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/devops_intelligence_test
PLAYWRIGHT_HEADLESS=true
JEST_TIMEOUT=30000

# Mock Data (for development)
USE_MOCK_DATA=false
MOCK_INCIDENT_FREQUENCY=300000

# =============================================================================
# DOCKER & CONTAINERIZATION
# =============================================================================

# Docker Configuration
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=latest

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup Configuration
BACKUP_S3_BUCKET=devops-intelligence-backups
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# =============================================================================
# COMPLIANCE & SECURITY
# =============================================================================

# Security Headers
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=90

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit this file with real values to version control
# 2. Use strong, unique passwords and API keys
# 3. Rotate credentials regularly
# 4. Use environment-specific values for different deployments
# 5. Consider using a secrets management service for production
